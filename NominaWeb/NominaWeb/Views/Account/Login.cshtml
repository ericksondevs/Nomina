@using NominaWeb.Models
@model LoginViewModel

@{
    /**/

    ViewBag.Title = "NominaAPP - Inicio de Sesion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<h2 class="p-3 mb-2 bg-primary text-white col-md-12">LOGIN</h2><hr /><hr /><hr />
<h3 class="p-3 mb-2 bg-info text-white col-md-8">Inicio de Sesion en Sistema de Nomina</h3>

<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @ViewBag.NoLogeado
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="col-md-6" style="font-size:20px">
                    @Html.LabelFor(m => m.Email, "Email:", new { @class = "col-md-9 control-label", @style = "text-align:left" })
                    <div class="col-md-10 form-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder="Email del usuario" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6" style="font-size:20px">
                    @Html.LabelFor(m => m.Password, "Contraseña:", new { @class = "col-md-9 control-label", @style = "text-align:left" })
                    <div class="col-md-10 form-group">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Contraseña del usuario" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-10">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe,"Recuerdame")
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-10">
                        <input type="submit" value="Iniciar Sesión" class="btn btn-success" />
                    </div>
                </div>
                <p>
                    @Html.ActionLink("Registrar como nuevo usuario", "Register", new { }, new { @class = "btn btn-info fa fa-sign-in-alt" })
                </p>
                @* Enable this once you have account confirmation enabled for password reset functionality
            <p>
                @Html.ActionLink("Forgot your password?", "ForgotPassword")
            </p>*@
            }
        </section>
    </div>
    <div class="col-md-4">
        <section>
            <img src="~/Images/Nomina(256px).png" alt="Nomina" style="align-content:center" />
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}