                                        {
                                            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new
                                            {
                                                id = "logoutForm",
                                            }))
                                            {
                                                @Html.AntiForgeryToken()
                                                <a class="btn btn-danger btn-flat" href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-power-off"></i> Salir</a>
                                            }
                                        }
                                        else
                                        {
                                            @Html.ActionLink("Iniciar Sesion", "Login", "Account", routeValues: null, htmlAttributes: new
                                       {
                                           id = "loginLink",
                                           @class = "btn btn-danger btn-flat" })
                                        }
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
