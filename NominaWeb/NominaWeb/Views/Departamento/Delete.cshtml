@model NominaDataBase.Departamentos

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="p-3 mb-2 bg-primary text-white col-md-8">Eliminar</h2>

<div class="form-horizontal col-md-8" style="text-align:center">

    <h3>Esta seguro de eliminar este registro?</h3>

    <h3 class="p-3 mb-2 bg-info text-white col-md-4" style="margin:120px">Departamento #@Html.DisplayFor(model => model.IdDepartamento)</h3>
    <hr />
    <br /><br />

    <div>
        <dl class="dl-horizontal col-md-4">
            <dt>
                <h3 style="font-weight:bold ">@Html.DisplayNameFor(model => model.Nombre):</h3>
            </dt>

            <dd>
                <h3>@Html.DisplayFor(model => model.Nombre)</h3>
            </dd>

            <dt>
                <h3 style="font-weight:bold">@Html.DisplayNameFor(model => model.Estado):</h3>
            </dt>

            <dd>
                <h3>@Html.DisplayFor(model => model.Estado)</h3>
            </dd>

        </dl>
    </div>
    <div class="form-horizontal col-md-10">
        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @Html.ActionLink("Volver Atras", "Index", new { }, new { @class = "btn btn-info" }) |
                <input type="submit" value="Eliminar" class="btn btn-danger" />
            </div>
        }
    </div>

</div>


