@model NominaDataBase.Departamentos

@{
    ViewBag.Title = "NominaAPP - Edición de  Departamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<h2 class="p-3 mb-2 bg-primary text-white col-md-12">Departamentos</h2><hr /><hr /><hr />
<h3 class="p-3 mb-2 bg-info text-white">Edición</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container py-5">
        <form class="row justify-content-center">

            <div class="form-group container col-md-12">
                <br /><br />
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IdDepartamento)

                <div class="col-md-3" style="font-size:20px">
                    @Html.LabelFor(model => model.Nombre, "Nombre: ", htmlAttributes: new { @class = "control-label col-md-9" })
                    <div class="col-md-10 form-group">
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @style = "font-size: 16px" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-3" style="font-size:20px">
                    @Html.LabelFor(model => model.Estado, "Estado: ", htmlAttributes: new { @class = "control-label col-md-9" })
                    <div class="col-md-10 form-group">
                        @{
                            var listItems = new List<SelectListItem>();
                            listItems.Add(new SelectListItem { Text = "Activo", Value = "A" });
                            listItems.Add(new SelectListItem { Text = "Inactivo", Value = "I" });
                        }

                        @Html.DropDownListFor(model => model.Estado, listItems, new { @class = "col-md-2 form-control", @style = "font-size: 16px" })
                        @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="text-align:center">
                    <div class="control-label col-md-7">
                        <br />
                        <input type="submit" value="Guardar Departamento" class="btn btn-success" style="font-size:18px" />
                    </div>
                </div>
                <div class="form-group" style="text-align:center">
                    <div class="control-label col-md-7">
                        <br />
                        @Html.ActionLink("Volver Atras", "Index", new { }, new { @class = "btn btn-warning fa fa-long-arrow-alt-left" })
                    </div>
                </div>
            </div>
        </form>
    </div>
}


<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
