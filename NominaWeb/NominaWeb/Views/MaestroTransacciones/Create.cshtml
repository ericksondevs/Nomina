@model NominaWeb.Models.TransaccionViewModel

@{
    ViewBag.Title = "NominaAPP - Creacion de  Transacción";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<h2 class="p-3 mb-2 bg-primary text-white col-md-12">Transacciones</h2><hr /><hr />
<h3 class="p-3 mb-2 bg-info text-white col-md-10">Creación</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container py-5">
        <form class="row justify-content-center">

            <div class="form-group container col-md-12">
                <br /><br />
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <h3 class="p-3 mb-2 bg-info text-white">Datos Generales</h3>

                <div class="col-md-3" style="font-size:20px">
                    @Html.LabelFor(model => model.Maestra.IdEmpleado, "Empleado:", htmlAttributes: new { @class = "control-label col-md-9" })
                    <div class="col-md-10 form-group">
                        @Html.DropDownList("IdEmpleado", (IEnumerable<SelectListItem>)ViewBag.IdEmpleado, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Maestra.Empleados.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-3" style="font-size:20px">
                    @Html.LabelFor(model => model.Maestra.IdTipoIngreso, "Tipo de Ingreso:", htmlAttributes: new { @class = "control-label col-md-9" })
                    <div class="col-md-10 form-group">
                        @Html.DropDownList("IdTipoIngreso", (IEnumerable<SelectListItem>)ViewBag.IdTipoIngreso, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Maestra.IdTipoIngreso, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-3" style="font-size:20px">
                    @Html.LabelFor(model => model.Maestra.IdTipoDeduccion, "Tipo de Deducción:", htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-10 form-group">
                        @Html.DropDownList("IdTipoDeduccion", (IEnumerable<SelectListItem>)ViewBag.IdTipoDeduccion, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Maestra.IdTipoDeduccion, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-3" style="font-size:20px">
                    @Html.LabelFor(model => model.Maestra.TipoTransaccion, "Tipo de Transacción:", htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-10 form-group">
                        @Html.DropDownList("IdTipoTransaccion", (IEnumerable<SelectListItem>)ViewBag.TipoTransaccion, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Maestra.TipoTransaccion, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group container col-md-12">
                    <h3 class="p-3 mb-2 bg-info text-white">Detalle de Transacción</h3>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="col-md-3" style="font-size:20px">
                        @Html.LabelFor(model => model.Detalle.Fecha, "Fecha de Transacción:", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-10 form-group">
                            @Html.EditorFor(model => model.Detalle.Fecha, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Detalle.Fecha, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-3" style="font-size:20px">
                        @Html.LabelFor(model => model.Detalle.Monto, "Monto:", htmlAttributes: new { @class = "control-label col-md-9" })
                        <div class="col-md-10 form-group">
                            @Html.EditorFor(model => model.Detalle.Monto, new { htmlAttributes = new { @type = "number", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Detalle.Monto, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-3" style="font-size:20px">
                        @Html.LabelFor(model => model.Maestra.Estado, "Estado:", htmlAttributes: new { @class = "control-label col-md-9" })
                        <div class="col-md-10 form-group">
                            @{
                                List<SelectListItem> listItems = new List<SelectListItem>();
                                listItems.Add(new SelectListItem { Text = "Activo", Value = "A" });
                                listItems.Add(new SelectListItem { Text = "Inactivo", Value = "I" });
                            }

                            @Html.DropDownListFor(model => model.Maestra.Estado, listItems, new { @class = "form-control", @style = "font-size: 16px", tabindex = 10 })
                            @Html.ValidationMessageFor(model => model.Maestra.Estado, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" style="text-align:center">
                        <div class="control-label col-md-12">
                            <br />
                            <input type="submit" value="Guardar Transacción" class="btn btn-success" style="font-size:18px" />
                        </div>
                    </div>
                    <div class="form-group" style="text-align:center">
                        <div class="control-label col-md-12">
                            <br />
                            @Html.ActionLink("Volver Atras", "Index", new { }, new { @class = "btn btn-warning fa fa-long-arrow-alt-left" })
                        </div>
                    </div>
                </div>
</form>
    </div>
}
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">

@section scripts {
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

    <script>
        $(function () {
            $(".datepicker").datepicker({
                dateFormat: "dd/mm/yy",
                changeMonth: true,
                changeYear: true,
                yearRange: "-6:+5",
                showOn: "both",
                buttonText: "<span class='fa fa-calendar-alt'></span>"
            });

        });
    </script>
}
