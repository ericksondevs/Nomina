@model IEnumerable<NominaDataBase.TipoTransaccion>

@{
    ViewBag.Title = "NominaAPP - Tipo de Transacciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="p-3 mb-2 bg-primary text-white col-lg-12">&nbsp;&nbsp;Tipo de Transacciones</h2>
<br /><br /><br /><br />

<p>
    @Html.ActionLink("Crear Nueva Tipo de Transacción", "Create", new { }, new { @class = "btn btn-success" })
    <br /><br />
</p>

<div class="col-md-16">
    <table class="table table-bordered table-striped text-center">
        <tr style="font-size:18px">
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayName("Acción")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr style="font-size:18px">
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IdTipoTransaccion }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.IdTipoTransaccion }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.IdTipoTransaccion }, new { @class = "btn btn-danger" })
            </td>
        </tr>
        }

    </table>
