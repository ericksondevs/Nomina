@model NominaDataBase.TipoTransaccion

@{
    ViewBag.Title = "NominaAPP - Eliminar Tipo de Transacción";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="p-3 mb-2 bg-primary text-white col-md-8">Eliminar</h2>

<div class="form-horizontal col-md-8" style="text-align:center">

    <h3>Esta seguro de eliminar este registro?</h3>

    <h3 class=" mb-2 bg-info text-white col-md-8" style="text-align:center">Tipo de Transacción #@Html.DisplayFor(model => model.IdTipoTransaccion)</h3>
    <dl class="dl-horizontal col-md-6">
        <dt>
            <h3 style="font-weight:bold">@Html.DisplayName("Descripción:")</h3>
        </dt>

        <dd>
            <h3>@Html.DisplayFor(model => model.Descripcion)</h3>
        </dd>

    </dl>
    <div class="form-group col-md-8" style="text-align:center">
        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <div class="control-label col-md-8">
                    <br />
                    <input type="submit" value="Eliminar Tipo de Transacción" class="btn btn-danger" style="font-size:18px" />
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-8">
                    <br />
                    @Html.ActionLink("Volver Atras", "Index", new { }, new { @class = "btn btn-warning fa fa-long-arrow-alt-left" })
                </div>
            </div>
        }
    </div>

</div>

<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">

