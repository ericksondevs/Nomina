@model NominaDataBase.Tipos_Ingresos

@{
    ViewBag.Title = "NominaAPP - Detalles Tipo de Ingreso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="p-3 mb-2 bg-primary text-white col-md-8">Detalles</h2>

<div class="form-horizontal col-md-8" style="text-align:center">
    <h3 class="p-3 mb-2 bg-info text-white col-md-4">Tipo de Ingreso #@Html.DisplayFor(model => model.IdTipoIngreso)</h3>
    <hr />
    <br /><br />
    <div>
        <dl class="dl-horizontal col-md-6">
            <dt>
                <h3 style="font-weight:bold ">@Html.DisplayNameFor(model => model.Nombre):</h3>
            </dt>

            <dd>
                <h3> @Html.DisplayFor(model => model.Nombre)</h3>
            </dd>

            <dt>
                <h3 style="font-weight:bold ">@Html.DisplayName("Depen salario:")</h3>
            </dt>

            <dd>
                <h3>@Html.DisplayFor(model => model.DependeSalario)</h3>
            </dd>

            <dt>
                <h3 style="font-weight:bold ">@Html.DisplayNameFor(model => model.Estado):</h3>
            </dt>

            <dd>
                <h3>@Html.DisplayFor(model => model.Estado)</h3>
            </dd>

        </dl>
    </div>
</div>

<div class="form-horizontal col-md-8">
    <br />
    @Html.ActionLink("Volver Atras", "Index", new { }, new { @class = "btn btn-info" }) |
    @Html.ActionLink("Editar", "Edit", new { id = Model.IdTipoIngreso }, new { @class = "btn btn-warning" })
</div>
